extends layout

block content
  if currentUser===undefined 
    h1 Logged out! 
    p Sign-in? #[a(href="/sign-in") Sign in]
  else
    .menu
      .item 
        a(href="/messages") Messages
      .item 
        a(href='/join') Join 
    h1="WELCOME BACK "+ currentUser.username
    a(href="/log-out")="LOG OUT"
    if messages
      for message in messages
        .message
          .username-time 
            .username=(currentUser.status==="Unverified"?"Anonymous":message.user.username)
            .time=(currentUser.status==="Unverified"?"":message.time)
          .title=message.title
          .content=message.message
          if(currentUser.status==="Admin")
            form(action='/messages/'+message._id method="POST")
              button(type="submit") Delete
    form(action="" method='POST')
      .form_item 
        label(for="title") Title 
        input#title(type="text", name="title" value=(message_title===undefined?'':message_title))
      .form_item
        label(for="message") Message
        textarea#message(name="message", cols="20", rows="10")=(message_content===undefined?'':message_content)   
      .form_item 
        input(type="hidden", name="user_id" value=currentUser._id) 
        button(type="submit") Submit Message
    if errors
      ul
        for error in errors
          li!= error.msg